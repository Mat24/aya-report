<p id="notice"><%= notice %></p>

<h1>Listado de certificados</h1>
<%= link_to 'Ingresar nuevo cliente', new_certificate_path %>
<br>
<div class="col-lg-12">
  <!-- START panel-->
  <div class="panel panel-default">
    <!--<div class="panel-heading">Basic Table</div>-->
    <div class="panel-body">
      <!-- START table-responsive-->
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Cedula</th>
            <th>Pagaduria</th>
            <th>No libranza</th>
            <th>Saldo</th>
            <th>Cuotas de</th>
            <th>Cooperativa</th>
            <th>Fecha vencimiento</th>
            <th colspan="5">Acciones</th>
          </tr>
          </thead>

          <tbody>
          <% @certificates.each do |certificate| %>
              <tr>
                <td><%= certificate.nombre %></td>
                <td><%= certificate.cedula %></td>
                <td><%= certificate.pagaduria %></td>
                <td><%= certificate.no_libranza %></td>
                <td><%= certificate.saldo_numeros %></td>
                <td><%= certificate.cuota_numeros %></td>
                <td><%= certificate.clase_cooperativa %></td>
                <td><%= certificate.fecha_vencimiento %></td>
                <td><%= link_to 'PDF', pdf_report_path(certificate) %></td>
                <td><%= link_to 'PDF Membrete', pdf_report_path(certificate, membrete: true) %></td>
                <td><%= link_to 'Mostrar', certificate %></td>
                <td><%= link_to 'Editar', edit_certificate_path(certificate) %></td>
                <td><%= link_to 'Eliminar', certificate, method: :delete, data: {confirm: 'Esta seguro?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

